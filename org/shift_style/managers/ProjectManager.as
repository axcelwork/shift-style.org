package org.shift_style.managers {	import flash.display.Stage;	import flash.system.Capabilities;		/**	 * プロジェクトに使用するパラメータを格納するクラスです.	 * 	 * @author axcel-work	 * @version 0.6	 * @since 2011/05/19	 * @usage	 * 	 */	public class ProjectManager {		public function ProjectManager(){			throw new Error("[Alert] ProjectManager クラスは static なのでインスタンスを作成することはできません");		}				private static var _stage:Stage;		/**		 * [getter/setter] static な Stage クラスを設定します.		 */		public static function set stage( value:Stage ):void { 			_stage = value;			_stage.align = "TL";			_stage.scaleMode = "noScale";		}		public static function get stage():Stage { return _stage; }				/**		 * [getter/setter] Stage インスタンスの align を設定します.		 */		public static function set stageAlign( value:String ):void { _stage.align = value; }		public static function get stageAlign():String { return _stage.align; }				/**		 * [getter/setter] Stage インスタンスの scaleMode を設定します.		 */		public static function set stageScaleMode( value:String ):void { _stage.scaleMode = value; }		public static function get stageScaleMode():String { return _stage.scaleMode; }				/**		 * [getter] Stage インスタンスの幅（四捨五入後）を取得します.		 */		public static function get stageWidth():int { return _stage.stageWidth; }				/**		 * [getter] Stage インスタンスの高さ（四捨五入後）を取得します.		 */		public static function get stageHeight():int { return _stage.stageHeight; }				private static var _base:Object;		/**		 * [getter/setter] Tween系の BaseParameter の値を格納します.		 */		public static function set baseParam( value:Object ):void { _base = value; }		public static function get baseParam():Object { return _base; }				private static var _xml:XML;		/**		 * [getter/setter] XML データを格納します.		 */		public static function set XMData( value:XML ):void { _xml = value; }		public static function get XMData():XML { return _xml; }						/**		 * [getter] OS の種類を取得します.		 */		public static function get OSVersion():String { return Capabilities.os.substring( 0, 3 ); }			}	}